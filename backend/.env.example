# --- Control Plane Configuration ---
# Server
PORT=3001
NODE_ENV=development

# PostgreSQL
DATABASE_URL=postgresql://mtec:mtec_secret@localhost:5433/mtec_control_plane

# Kubernetes
KUBECONFIG=~/.kube/config
KUBE_CONTEXT=

# Helm
HELM_CHART_PATH=../helm/ecommerce-store
HELM_VALUES_FILE=values-local.yaml
# HELM_BIN=helm                    # Full path if not on PATH (e.g. C:\Program Files\Helm\helm.exe)

# kubectl
# KUBECTL_BIN=kubectl              # Full path if not on PATH

# Provisioning
MAX_STORES_PER_USER=5
PROVISIONING_TIMEOUT_MS=600000
STORE_DOMAIN_SUFFIX=.localhost

# JWT Authentication
JWT_SECRET=change-this-to-a-random-secret-in-production
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=debug
